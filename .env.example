# Sofascore Scraper yapılandırma değişkenleri
API_BASE_URL='https://www.sofascore.com/api/v1'
REQUEST_TIMEOUT='20'
MAX_RETRIES='3'

# HIZLANDIRMA AYARLARI
MAX_CONCURRENT='25'
WAIT_TIME_MIN=0.4     # Minimum bekleme süresi (saniye) - arttırıldı
WAIT_TIME_MAX=0.8     # Maksimum ek bekleme süresi (saniye) - arttırıldı

# MAÇ FİLTRELEME AYARLARI
FETCH_ONLY_FINISHED=true    # Sadece bitmiş maçları çek
SAVE_EMPTY_ROUNDS=false     # Boş turları da dosyaya kaydet

# LOGLAMA
LOG_LEVEL="DEBUG"     # Daha detaylı loglama

# HATA AYIKLAMA
DEBUG_MODE=true       # Hata ayıklama modu
VERIFY_SSL=false      # SSL doğrulamasını devre dışı bırak

# TEST AYARLARI
TEST_MODE=true        # Test modunda çalış - daha az istek yapılır
MAX_TEST_ROUNDS=10    # Test modunda çekilecek maksimum tur sayısı
USE_PROXY='false'
